<div class="container">
  <div class="row">
    <%= form_with model: @student, url: students_path, class: :col, local: true do |form| %>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= form.label :first_name %>
            <%= form.text_field :first_name %>
          </p>
        </div>
      </div>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= form.label :last_name %>
            <%= form.text_field :last_name %>
          </p>
        </div>
      </div>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= form.label :age %>
            <%= form.text_field :age %>
          </p>
        </div>
      </div>
      <div class="col">
        <div class="input-field col s12">
          <%= form.label :education %><br>
          <br>
          <%= form.select(:education, options_for_select([['High School'], ['College'], ['Masters'], ['PHD']]), { include_blank: true }) %>
        </div>
      </div>
      <div class="col">
        <div class="input-field col s6">
          <button class="btn btn-large btn-register waves-effect waves-effect2  waves-light deep-orange lighten-3" type="submit" > Add Student
            <%= form.submit %>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

