<div class="container">
  <div class="row">
    <%= form_with model: @instructor, url: instructors_path, class: :col, local: true do |form| %>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= form.label :first_name %><br>
            <%= form.text_field :first_name %>
          </p>
        </div>
      </div>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= form.label :last_name %><br>
            <%= form.text_field :last_name %>
          </p>
        </div>
      </div>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= form.label :age %><br>
            <%= form.text_field :age %>
          </p>
        </div>
      </div>
       <div class="col">
        <div class="input-field col s12">
          <p>
            <%= form.label :salary %><br>
            <%= form.text_field :salary %>
          </p>
        </div>
      </div>
      <div class="col">
        <div class="input-field col s12">
          <%= form.label :education %><br>
          <br>
          <select name="education" class="browser-default">
            <option value="" disable selected></option>
            <option value="Highschool">Highschool</option>
            <option value="College">College</option>
            <option value="Masters">Masters</option>
            <option value="Phd">Phd</option>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <button class="waves-effect waves-light btn indigo lighten-1" type="submit" >Save
            <%= form.submit " "%>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
