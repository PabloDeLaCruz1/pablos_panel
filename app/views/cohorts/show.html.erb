<div class="container">
  <h1>Cohort <%= @cohort.name %>:</h1>
 <%= link_to 'Delete Cohort', cohort_path(id: @cohort.id), method: :delete, class: "waves-effect waves-light btn indigo lighten-1" %>
  <%= link_to 'Edit Cohort', cohort_path(id: @cohort.id), class: "waves-effect waves-light btn indigo lighten-1" %>

<h3>Instructor: <%= @cohort.instructor.first_name + " " + @cohort.instructor.last_name %></h3>
<h3>Students:</h3>
  <table class="posts">
            <thead>
                <tr>
                    <th class="first_name">First Name</th>
                    <th class="last_name">Last Name</th>
                    <th class="age">Age</th>
                    <th class="education">Education</th>
                    <th>Show</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
   <% @cohort.students.each do |student| %>
            <tbody id="student<%= student.id %>">
                <tr class="students_table">
                    <td> <%= student.first_name %> </td>
                    <td> <%= student.last_name %> </td>
                    <td> <%= student.age %> </td>
                    <td> <%= student.education %> </td>
                    <td> <a href="/students/<%= student.id %>"><i class="material-icons md-25">perm_identity</i></a></td>
                    <td> <a href="/students/<%= student.id %>/edit"><i class="material-icons md-25">edit</i></a></td>
                    <td> <%= link_to '<i class="material-icons">delete_forever</i>'.html_safe, student_path(id: student.id), method: :delete, remote: true %></td>
                </tr>
            </tbody>
        <% end %>
    </table>
</div>
