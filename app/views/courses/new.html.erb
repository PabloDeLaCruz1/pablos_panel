<div class="container">
  <div class="row">
    <%= form_with model: @course, url: courses_path, class: :col, local: true do |form| %>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= form.label :name %><br>
            <%= form.text_field :name %>
          </p>
        </div>
      </div>
      <div class="col">
        <div class="input-field col s12">
          <p>
            <%= form.label :total_hours %><br>
            <%= form.text_field :total_hours %>
          </p>
        </div>
      </div>

      <div class="col">
        <div class="input-field col s6">
          <button class="btn btn-large btn-register waves-effect waves-effect2  waves-light deep-orange lighten-3" type="submit" > Add course
            <%= form.submit %>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
